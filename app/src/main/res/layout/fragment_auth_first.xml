<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_auth_fragment"                                                    >
    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <EditText
                    android:id="@+id/et_auth_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:layout_marginTop="24dp"
                    android:layout_marginRight="33dp"
                    android:layout_marginLeft="33dp"
                    android:hint="Имя"
                    android:ems="10"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    />
            <EditText
                    android:id="@+id/et_auth_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:hint="Фамилия"
                    android:layout_marginTop="24dp"
                    android:layout_marginLeft="33dp"
                    android:layout_marginRight="33dp"
                    android:ems="10"
                    app:layout_constraintTop_toBottomOf="@id/et_auth_first_name"
                    app:layout_constraintLeft_toLeftOf="parent"

            />
            <EditText
                    android:id="@+id/et_auth_institute"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:hint="Институт"
                    android:layout_marginTop="24dp"
                    android:layout_marginLeft="33dp"
                    android:layout_marginRight="33dp"
                    android:ems="10"
                    app:layout_constraintTop_toBottomOf="@id/et_auth_last_name"
                    app:layout_constraintLeft_toLeftOf="parent"

            />
            <EditText
                    android:id="@+id/et_auth_course"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:hint="Направление"
                    android:layout_marginTop="24dp"
                    android:layout_marginLeft="33dp"
                    android:layout_marginRight="33dp"
                    android:ems="10"
                    app:layout_constraintTop_toBottomOf="@id/et_auth_institute"
                    app:layout_constraintLeft_toLeftOf="parent"

            />
            <EditText
                    android:id="@+id/et_auth_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:hint="Группа"
                    android:layout_marginTop="24dp"
                    android:layout_marginLeft="33dp"
                    android:layout_marginRight="33dp"
                    android:ems="10"
                    app:layout_constraintTop_toBottomOf="@id/et_auth_course"
                    app:layout_constraintLeft_toLeftOf="parent"

            />
            <EditText
                    android:id="@+id/et_auth_recordBook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="Номер зачетной книжки"
                    android:layout_marginTop="24dp"
                    android:layout_marginLeft="33dp"
                    android:layout_marginRight="33dp"
                    android:ems="10"
                    app:layout_constraintTop_toBottomOf="@id/et_auth_group"
                    app:layout_constraintLeft_toLeftOf="parent"

                    />
            <EditText
                    android:id="@+id/et_auth_semester"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="Семестр"
                    android:layout_marginTop="24dp"
                    android:layout_marginLeft="33dp"
                    android:layout_marginRight="33dp"
                    android:ems="10"
                    app:layout_constraintTop_toBottomOf="@id/et_auth_recordBook"

                    app:layout_constraintLeft_toLeftOf="parent"

            />
            <Button
                    android:text="Назад"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/b_auth_back"
                    android:layout_marginTop="24dp"
                    android:layout_marginLeft="33dp"
                    app:layout_constraintTop_toBottomOf="@id/et_auth_semester"

                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/b_auth_accept"/>
            <Button
                    android:text="Подтвердить"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/b_auth_accept"
                    android:layout_marginTop="24dp"
                    android:layout_marginRight="33dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/et_auth_semester"

                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/b_auth_back"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>